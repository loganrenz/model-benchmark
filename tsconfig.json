{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowJs": true,
    "moduleDetection": "force",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"]
    },
    "types": ["vitest/importMeta"]
  },
  "include": ["**/*"],
  "exclude": ["node_modules", ".nuxt"]
}
